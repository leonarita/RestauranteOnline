@model IEnumerable<RestauranteOnline.Models.Restaurante>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Restaurante", "Inserir")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Site)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisqueEntrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bairro.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Site)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisqueEntrega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bairro.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero.Descricao)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id = item.IDRestaurante }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.IDRestaurante })
        </td>
    </tr>
}

</table>
